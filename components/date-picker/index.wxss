.time-picker {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 10;
}
.time-picker .mask {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}
.time-picker .time-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 600rpx;
  background-color: #fff;
}
.time-picker .time-content .operate-area {
  width: 100%;
  height: 120rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
}
.time-picker .time-content .operate-area .btn {
  color: #FB4D4D;
  padding: 10rpx;
}
.time-picker .time-content .pick-box {
  padding: 0 60rpx;
  height: 480rpx;
}
.time-picker .time-content .pick-box .pick-item {
  line-height: 68rpx;
}
