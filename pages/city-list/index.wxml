<view class="city-list">
	<view class="current-pos">
		<p>当前位置</p>
		<view class="city">
			<text>
        <image
          class
          src="../../img/pos.png"
          mode="aspectFit|aspectFill|widthFix"
          lazy-load="false"
          binderror
          bindload
        />
        <text class="city-name">{{city}}</text>
			</text>
			<text class="reload-pos" bindtap="reloadPos">
        <image
          class="img"
          src="../../img/shape.png"
          mode="aspectFit|aspectFill|widthFix"
          lazy-load="false"
          binderror
          bindload
        />重新定位
      </text>
		</view>
	</view>
	<view class="city-list-ct">
		<mp-indexList
		 class="city__list"
		 list="{{list}}"
		 bindchoose="setCity"
		>
			<view class="page">
				<view class="page__bd"></view>
			</view>
		</mp-indexList>
	</view>
</view>

